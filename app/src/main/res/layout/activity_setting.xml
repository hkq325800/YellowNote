<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/textBackgroundColor"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <include
            layout="@layout/fragment_navigation"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize" />

        <TextView
            android:id="@+id/mSettingTipsTxt"
            android:layout_width="wrap_content"
            android:layout_marginTop="120dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="点击下载最新版或者分享给你的朋友吧" />

        <ImageView
            android:id="@+id/mSettingCodeImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/mSettingTipsTxt"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ic_code" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mSettingCodeImg"
            android:text="github:hkq325800@163.com"
            android:visibility="gone" />

        <android.support.design.widget.TextInputLayout

            android:id="@+id/mSettingTouchTextInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mSettingCodeImg"
            android:padding="20dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="留下您的QQ或邮箱(选填)"
                android:maxLength="500"
                android:textSize="16sp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout

            android:id="@+id/mSettingContentTextInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mSettingTouchTextInput"
            android:padding="20dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="您的建议就是我的最大动力"
                android:maxLength="500"
                android:textSize="16sp" />
        </android.support.design.widget.TextInputLayout>
    </RelativeLayout>
</ScrollView>