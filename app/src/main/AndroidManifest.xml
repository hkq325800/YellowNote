<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.kerchin.yellownote">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".global.MyApplication"
        android:allowBackup="false"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar"
        tools:replace="android:allowBackup">
        <activity
            android:name=".activity.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.LaunchActivity"
            android:label="@string/app_name"
            android:theme="@style/TransparentThemeDay" />
        <activity
            android:name=".activity.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.LoginNoActionBar"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".activity.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBarDrawer"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".activity.SetPatternActivity"
            android:label="设置密码"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Pattern" />
        <activity
            android:name=".activity.ConfirmPatternActivity"
            android:label="确认密码"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Pattern" />
        <activity
            android:name=".activity.EditActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/TransparentThemeDay"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".activity.ShareSuggestActivity"
            android:screenOrientation="portrait"
            android:theme="@style/TransparentThemeDay"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" />
        <activity
            android:name=".activity.SecretActivity"
            android:screenOrientation="portrait"
            android:theme="@style/TransparentThemeDay"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" />
        <activity
            android:name=".activity.SecretMenuActivity"
            android:screenOrientation="portrait"
            android:theme="@style/TransparentThemeDay"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" />
        <activity
            android:name=".activity.ThankActivity"
            android:screenOrientation="portrait"
            android:theme="@style/TransparentThemeDay"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" />
        <activity android:name=".activity.OrmLiteConsoleActivity" />

        <service android:name="com.kerchin.yellownote.service.DownloadService">
            <intent-filter android:priority="1000">
                <action android:name="com.kerchin.yellownote.service.DownloadService" />
            </intent-filter>
        </service>
        <!--<activity android:name=".activities.MaterialActivity" />-->
    </application>

</manifest>
