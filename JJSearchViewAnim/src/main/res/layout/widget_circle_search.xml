<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/circle_search_background">

    <com.cjj.sva.JJSearchView
        android:id="@+id/mSearchView"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true" />

    <EditText
        android:id="@+id/mSearchViewEdt"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@id/mSearchView"
        android:layout_centerInParent="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="36dp"
        android:background="@null"
        android:hint="请输入搜索关键字"
        android:text=""
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textCursorDrawable="@null"
        android:textSize="14sp"
        android:visibility="invisible" />

    <RelativeLayout
        android:id="@+id/mSearchViewReL"
        android:layout_toRightOf="@id/mSearchView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/mSearchViewDownImg"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_arrow_down" />

        <TextView
            android:id="@+id/mSearchViewWeGotTxt"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/mSearchViewDownImg"
            android:gravity="center_vertical"
            android:text="共0当前第0"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/mSearchViewUpImg"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/mSearchViewWeGotTxt"
            android:background="@drawable/ic_arrow_up" />
    </RelativeLayout>
</RelativeLayout>